{% extends 'base.html.twig' %}

{% block title %}Créer une nouvelle séance{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="mb-4">Créer une nouvelle séance</h1>

        <div class="card">
            <div class="card-body">
                {{ form_start(form, {'attr': {'class': 'needs-validation'}}) }}
                {{ form_widget(form, {'attr': {'class': 'form-control mb-3'}}) }}
                <button class="btn btn-success">
                    <i class="bi bi-plus-circle"></i> Créer
                </button>
                {{ form_end(form) }}
            </div>
        </div>

        <div class="mt-4">
            <a href="{{ path('app_planning') }}" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Retour à la liste
            </a>
        </div>
    </div>
{% endblock %}
