{% extends 'base.html.twig' %}
{% block title %}Détails du patient{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="row">
            <div class="col-12">
                <h3 class="text-center">
                    Bonjour, <strong class="text-primary">{{ patient.Nom | upper }}</strong> {{ patient.prenom | capitalize }}
                </h3>
            </div>
        </div>

        {% if seancesFutur is defined and seancesFutur != [] %}
            <div class="row mt-4">
                <div class="col-12">
                    <h4 class="mb-4 text-secondary">Vos Séances futur:</h4>
                </div>
            </div>
            <div class="row">
                {% for seance in seancesFutur %}
                    <div class="col-md-6 col-lg-4 mb-4">
                        <div class="card shadow-sm">
                            <div class="card-header bg-primary text-white">
                                <h5 class="card-title mb-0">{{ seance.date|date("m/d/Y") }}</h5>
                                <small>{{ seance.HeureDebut|date("H:i") }} - {{ seance.HeureFin|date("H:i") }}</small>
                            </div>
                            <div class="card-body">
                                <p>
                                    <strong>Professionnel : </strong> {{ seance.professionnel.nom }}
                                </p>
                                {% if seance.raison is defined and seance.raison != [] %}
                                    <p><strong>Raison :</strong> {{ seance.raison }}</p>
                                {% endif %}
                                {% if seance.note is defined and seance.note != [] %}
                                    <p><strong>Note :</strong> {{ seance.note }}</p>
                                {% endif %}
                                <p class="text-end text-muted small"># {{ seance.id }}</p>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% else %}
            <div class="row">
                <div class="col-12">
                    <div class="alert alert-warning text-center mt-4">
                        <strong>Aucune séance futur trouvée.</strong>
                    </div>
                </div>
            </div>
        {% endif %}
        {% if seancesPasse is defined and seancesPasse != [] %}
            <div class="row mt-4">
                <div class="col-12">
                    <h4 class="mb-4 text-secondary">Vos Séances Passés:</h4>
                </div>
            </div>
            <div class="row">
                {% for seance in seancesPasse %}
                    <div class="col-md-6 col-lg-4 mb-4">
                        <div class="card shadow-sm">
                            <div class="card-header bg-secondary text-white">
                                <h5 class="card-title mb-0">{{ seance.date|date("m/d/Y") }}</h5>
                                <small>{{ seance.HeureDebut|date("H:i") }} - {{ seance.HeureFin|date("H:i") }}</small>
                            </div>
                            <div class="card-body">
                                <p>
                                    <strong>Professionnel :</strong> {{ seance.professionnel.nom }}
                                </p>
                                {% if seance.raison is defined and seance.raison != []%}
                                    <p><strong>Raison : </strong> {{ seance.raison }}</p>
                                {% endif %}
                                {% if seance.note is defined and seance.note != [] %}
                                    <p><strong>Note :</strong> {{ seance.note }}</p>
                                {% endif %}
                                <p class="text-end text-muted small"># {{ seance.id }}</p>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% else %}
            <div class="row">
                <div class="col-12">
                    <div class="alert alert-warning text-center mt-4">
                        <strong>Aucune séance passée trouvée.</strong>
                    </div>
                </div>
            </div>
        {% endif %}
    </div>
{% endblock %}
